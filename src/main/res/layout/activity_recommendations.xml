<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/recommendations_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/doctor_s_recommendations_will_appear_here"
        android:textSize="16sp"
        android:paddingBottom="8dp" />

    <TextView
        android:id="@+id/medications_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/suggested_medications_will_appear_here"
        android:textSize="16sp"
        android:paddingBottom="16dp" />

    <Button
        android:id="@+id/fetch_recommendations_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/get_recommendations" />

</LinearLayout>
